<% provide :title,"Connexion" %>
<% session[:user_id] = 10 %>
<div class="row sauth">
	<div class="col-md-6 " style="padding-top:40px;">

		<h1>Connexion</h1>
		<h2>Bienvenue dans PICOJAZZ SAMPLE APP , <br> Pret a rejoindre le reste du monde ? </h2>
	</div>
	<div class="col-md-5 bar" >

	 <%= form_for(:session,url:login_path) do |f| %>
	 
	 
	 <div class="form-group">
		
      <%= f.label :email %>
      <%= f.email_field :email ,class:"form-control" %>
      	
     </div>
     <div class="form-group">
		
      <%= f.label :password,"Mot de passe " %>
      <%= f.password_field :password ,class:"form-control" %>
		
	 </div>
	 
      <%= f.submit "Connexion", class: "btn btn-lg btn-primary" %>
      
     <% end %>
	<br>
     <p>Pas encore de compte ? <%= link_to "S'inscrire !",signup_path %> </p>
     
	</div>
</div>

